<%- include header %>
<% if(user && (user.name === post.author)){ %>
    <div>
        <span><a class="edit" href="/edit/<%= post._id %>">编辑</a></span>
        <span><a class="edit" href="/remove/<%= post._id %>">删除</a></span>
    </div>
<% } %>
<p class="info">
    作者：<a href="/u/<%= post.author %>"><%= post.author %></a> | 
    日期：<%= post.time.minute %>
    标签：
    <% post.tags.forEach(function (tag, index) { %>
        <% if (tag) { %>
            <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
        <% } %>
    <% }) %>
</p>
<p class="info">阅读：<%= post.pv %></p>
<p><%- post.post %></p>
<%- include comment %>
<%- include footer %>